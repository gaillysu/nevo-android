<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/customWhite"
    android:weightSum="1"
    android:orientation="horizontal"
    android:id="@+id/typeLaout">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

 <!--       <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/typeIconImage"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp" />-->

        <TextView
            android:layout_width="65sp"
            android:layout_height="60sp"
            android:id="@+id/typeTextView"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_centerVertical="true"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/typeSwitch"
            android:layout_gravity="center_vertical|right"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/typeImage"
            android:focusable="false"
            android:switchMinWidth="60dp"
            android:textOn=""
            android:textOff=""
            android:thumb="@drawable/switch_bg"
            android:track="@drawable/track_bg"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/typeImage"
            android:layout_gravity="center_vertical|right"
            android:layout_alignTop="@+id/typeSwitch"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
</LinearLayout>
