<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/customWhite"
    android:weightSum="1"
    android:orientation="horizontal"
    android:id="@+id/typeLaout">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

     <ImageView
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:id="@+id/typeIconImage"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:id="@+id/typeTextView"
            android:layout_gravity="center_vertical"
            android:gravity="left|center"
            android:layout_centerVertical="true"
            android:textColor="@color/customBlack"
            android:textSize="20sp"
            android:layout_marginLeft="40dp"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/typeSwitch"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:focusable="false"
            android:switchMinWidth="50dp"
            android:textOn=""
            android:textOff=""
            android:thumb="@drawable/switch_bg"
            android:track="@drawable/track_bg"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/typeImage" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/typeImage"
            android:layout_gravity="right|center"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>
