<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    xmlns:roboto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="4">
        <ImageView

            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/clock_imageView"
            android:src="@drawable/clockview600"/>

        <ImageView
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/HomeClockHour"
            android:src="@drawable/clockview_hour"
            android:visibility="visible"/>

        <ImageView
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/HomeClockMinute"
            android:src="@drawable/clockview_minute"
            android:visibility="visible"/>

        <com.medcorp.nevo.view.RoundProgressBar
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/roundProgressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android_custom:roundColor="#00000000"
            android_custom:roundWidth="2dp"
            android_custom:roundProgressColor="#fff5a41c"
            android_custom:textIsDisplayable="false"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="3">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.medcorp.nevo.view.customfontview.RobotoTextView
                android:textColor="@color/customGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                roboto:light="true"
                android:text="goal"/>
            <com.medcorp.nevo.view.customfontview.RobotoTextView
                android:textColor="@color/black"
                android:id="@+id/fragment_steps_today_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.medcorp.nevo.view.customfontview.RobotoTextView
                android:textColor="@color/customGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                roboto:light="true"
                android:text="progress"/>
            <com.medcorp.nevo.view.customfontview.RobotoTextView
                android:id="@+id/fragment_steps_today_progress"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="0%"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.medcorp.nevo.view.customfontview.RobotoTextView
                android:textColor="@color/customGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                roboto:light="true"
                android:text="steps"/>
            <com.medcorp.nevo.view.customfontview.RobotoTextView
                android:textColor="@color/black"
                android:id="@+id/fragment_steps_today_dailysteps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="0"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
