<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
        layout="@layout/forget_password_activity_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="@string/forget_password_result_prompt"
        android:textColor="@color/text_color"
        android:textSize="30dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:tint="@color/colorPrimary"
        android:src="@drawable/forget_password_result__prompt_icon"
        />

    <EditText
        android:id="@+id/input_new_password_ed"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:inputType="textPassword"
        android:textColor="@color/text_color"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_input_email_account_bg"
        android:hint="@string/forget_password_input_new_password"
        android:paddingLeft="8dp"
        android:textColorHint="@color/text_color"
        />

    <EditText
        android:id="@+id/input_new_password_ed_two"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_input_email_account_bg"
        android:hint="@string/register_password_confirm"
        android:paddingLeft="8dp"
        android:textColor="@color/text_color"
        android:textColorHint="@color/text_color"
        />

    <Button
        android:id="@+id/send_new_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="20sp"
        android:textColor="@color/text_color"
        android:textAllCaps="false"
        android:layout_marginTop="40dp"
        android:text="@string/change_password"
        android:layout_marginBottom="40dp"
        android:background="@drawable/shape_login_button_bg"/>
