<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:paddingLeft="10dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingRight="10dp"
    android:gravity="center_vertical"
    >
    <ImageView
        android:id ="@+id/activity_setting_menu_image"
        android:src="@drawable/setting"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <com.medcorp.nevo.view.customfontview.RobotoTextView
        android:id="@+id/activity_setting_menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/settings_link_loss_notification"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/activity_setting_menu_image"
        android:background="@color/transparent"
        android:paddingLeft="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <android.support.v7.widget.SwitchCompat
        android:shadowColor="@color/colorPrimary"
        android:id="@+id/activity_setting_menu_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:focusable="false" />


</RelativeLayout>