<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:textColor="@color/customOrange"
        android:id="@+id/t2_backButton"
        android:background="#00000000"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/stupe_image1"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/bluetoothEnabled"
        android:textColor="@color/customBlack"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bluetoothon_state_off"
        android:id="@+id/bluetoothState"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bluetoothIcon"
        android:id="@+id/bluetoothOffText"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/customBlack"
        android:padding="10dp"
        android:gravity="center"
        android:textSize="20sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t2_nextButton"
        android:text="@string/next"
        android:textColor="@color/customOrange"
        android:background="#00000000"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible"/>
</LinearLayout>