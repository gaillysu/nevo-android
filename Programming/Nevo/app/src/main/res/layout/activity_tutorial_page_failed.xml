<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:roboto="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/window_background_color"
                android:orientation="vertical">

    <com.medcorp.view.customfontview.RobotoTextView
        android:id="@+id/activity_tutorial_page5_search_failure_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/tutorial_failed_title"
        android:textColor="@color/text_color"
        android:textSize="36sp"
        roboto:bold="true"/>

    <com.medcorp.view.customfontview.RobotoButton
        android:id="@+id/activity_tutorial_retry_button"
        style="@style/TutorialButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/activity_tutorial_page6_image"
        android:layout_marginTop="40dp"
        android:text="@string/tutorial_failed_try_again"
        />

    <com.medcorp.view.customfontview.RobotoTextView
        android:id="@+id/activity_tutorial_page5_search_failure_tip_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/activity_tutorial_retry_button"
        android:layout_alignStart="@+id/activity_tutorial_retry_button"
        android:layout_below="@+id/activity_tutorial_retry_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:text="@string/tutorial_failed_text"
        android:textColor="@color/text_color"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/activity_tutorial_page6_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/bluetooth_icon"
        android:tint="@color/text_color"/>

</RelativeLayout>