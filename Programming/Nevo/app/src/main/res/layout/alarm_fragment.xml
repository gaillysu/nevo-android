<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/customWhite">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="70dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:text="@string/clock"
            android:id="@+id/clock_textView"
            android:textColor="@color/customBlack"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/edit_clock_imageButton"
            android:textColor="@color/customBlack"
            android:layout_gravity="bottom"
            android:background="@drawable/editor"
            android:layout_marginTop="50dp"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/on_mode_button"
            android:background="@drawable/alarm_open_button_selector"
            android:layout_marginLeft="10dp"
            android:text="@string/open_string"
            android:textColor="@color/customBlack"
            android:textAllCaps="false"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/off_mode_button"
            android:background="@drawable/alarm_close_button_selector"
            android:text="@string/close_string"
            android:layout_marginLeft="10dp"
            android:textColor="@color/customBlack"
            android:textAllCaps="false"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:text="@string/clock"
            android:id="@+id/clock_textView2"
            android:textColor="@color/customBlack"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/edit_clock_imageButton2"
            android:textColor="@color/customBlack"
            android:layout_gravity="bottom"
            android:background="@drawable/editor"
            android:layout_marginTop="50dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/on_mode_button2"
            android:background="@drawable/alarm_open_button_selector"
            android:layout_marginLeft="10dp"
            android:text="@string/open_string"
            android:textColor="@color/customBlack"
            android:textAllCaps="false" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/off_mode_button2"
            android:background="@drawable/alarm_close_button_selector"
            android:text="@string/close_string"
            android:layout_marginLeft="10dp"
            android:textColor="@color/customBlack"
            android:textAllCaps="false" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:text="@string/clock"
            android:id="@+id/clock_textView3"
            android:textColor="@color/customBlack"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/edit_clock_imageButton3"
            android:textColor="@color/customBlack"
            android:layout_gravity="bottom"
            android:background="@drawable/editor"
            android:layout_marginTop="50dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/on_mode_button3"
            android:background="@drawable/alarm_open_button_selector"
            android:layout_marginLeft="10dp"
            android:text="@string/open_string"
            android:textColor="@color/customBlack"
            android:textAllCaps="false" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/off_mode_button3"
            android:background="@drawable/alarm_close_button_selector"
            android:text="@string/close_string"
            android:layout_marginLeft="10dp"
            android:textColor="@color/customBlack"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>