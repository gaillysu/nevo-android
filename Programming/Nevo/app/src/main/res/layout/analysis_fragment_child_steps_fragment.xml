<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/steps_fragment_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/analysis_fragment_this_week_steps"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/steps_identification_icon"
            android:drawablePadding="10dp"
            android:textSize="20sp"
            android:text="@string/this_week_steps_identification_one"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/steps_identification_total_icon"
            android:drawablePadding="10dp"
            android:textSize="20sp"
            android:text="@string/this_week_steps_identification_average"
            android:textColor="@color/white"
            />
        <android.support.v4.view.ViewPager
            android:id="@+id/analysis_steps_fragment_content_chart_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>
    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/analysis_bottom_layout"/>
</LinearLayout>