<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/customWhite">

    <RelativeLayout
        android:id="@+id/header"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="23sp"
            android:textColor="@color/customBlack"
            android:id="@+id/titleTextView"
            android:text="@string/sleep_tracking"
            android:background="@color/customWhite"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:gravity="center" />
    </RelativeLayout>


    <com.medcorp.nevo.view.customfontview.RalewayTextView
        android:id="@+id/sleeptracking_textview"
        android:textColor="@color/customBlack"
        android:text="@string/sleeptracking_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textSize="17dp"
        android:layout_toRightOf="@+id/sleeptracking_image"
        android:layout_centerVertical="true"
         />

    <ImageView
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/sleeptracking_image"
        android:src="@drawable/sleeptracking_tutorial"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content" />

    <com.medcorp.nevo.view.customfontview.RalewayButton
        android:layout_marginTop="25dp"
        android:id="@+id/back_button"
        android:textColor="@color/customBlack"
        android:text="@string/back"
        android:background="@color/transparent"
        android:layout_width="wrap_content"
        android:layout_below="@+id/sleeptracking_image"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />

</RelativeLayout>

