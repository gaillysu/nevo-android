<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:background="@drawable/nevo_watch"
                android:gravity="bottom"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="15dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <ImageButton
        android:id="@+id/navigation_header_imageview"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:layout_marginTop="25dp"
        android:background="@android:color/transparent"
        android:src="@drawable/user"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/navigation_header_spinner"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:fabSize="mini"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/menu_heard_floating_action_bt_src"
        />
    <TextView
        android:id="@+id/drawable_left_show_user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_below="@id/navigation_header_imageview"
        />
    <TextView
        android:id="@+id/navigation_header_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:textColor="@color/white"
        android:textSize="18sp"/>
</RelativeLayout>