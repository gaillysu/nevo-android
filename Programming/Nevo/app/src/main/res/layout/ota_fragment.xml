<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/customWhite">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_weight="0.32"></LinearLayout>

    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="315dp"
            android:layout_height="315dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.18"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="false"
            android:layout_marginTop="0dp" >

            <com.nevowatch.nevo.View.RoundProgressBar
                android:id="@+id/roundProgressBar"
                android:layout_width="315dp"
                android:layout_height="315dp"
                android:layout_centerInParent = "true"
                android_custom:roundColor="@color/customGray"
                android_custom:roundWidth="5dp"
                android_custom:roundProgressColor="@color/customOrange"
                android_custom:textIsDisplayable="false"/>

        </RelativeLayout>

</LinearLayout>
