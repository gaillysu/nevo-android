<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/customWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="23sp"
            android:textColor="@color/white"
            android:id="@+id/titleTextView"
            android:text="OTA"
            android:background="@color/customBlack"
            android:gravity="center" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/backImage"
            android:background="@drawable/back"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="83dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp">

    </RelativeLayout>

    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="false"
            android:layout_marginTop="0dp" >

            <com.nevowatch.nevo.View.RoundProgressBar
                android:id="@+id/otaProgressBar"
                android:layout_width="260dp"
                android:layout_height="260dp"
                android:layout_centerInParent = "true"
                android_custom:roundColor="@color/customGray"
                android_custom:roundWidth="5dp"
                android_custom:roundProgressColor="@color/customOrange"
                android_custom:textIsDisplayable="false"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/watchType"
            android:src="@drawable/wacthdial300"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2/2"
            android:id="@+id/textView6"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/attention"
            android:textSize="20sp"
            android:id="@+id/textView5"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/otahelp"
            android:textSize="15sp"
            android:id="@+id/textView4"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/reUpgradebutton"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:background="@drawable/round_button"
            android:text="@string/re_upgrade"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textColor="@color/customBlack"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</LinearLayout>
