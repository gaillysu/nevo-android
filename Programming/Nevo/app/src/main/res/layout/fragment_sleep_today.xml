<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    xmlns:roboto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="6"
    android:background="@color/customBlack">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="4">

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/clock_imageView"
            android:src="@drawable/clockview600_sleep"/>

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/HomeClockHour"
            android:src="@drawable/clockview_hour_sleep" />

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/HomeClockMinute"
            android:src="@drawable/clockview_minute_sleep"/>

        <com.medcorp.nevo.view.SleepDataView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/sleepDataViewBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent = "true"
            android_custom:roundColor="#00000000"
            android_custom:roundWidth="2dp"
            android_custom:roundProgressColor="#fff5a41c"
            android_custom:sleepWakeColor="@color/wake_sleep"
            android_custom:sleepLightColor="@color/light_sleep"
            android_custom:sleepDeepColor="@color/deep_sleep"
            android_custom:textIsDisplayable="false"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:weightSum="2">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!-- TODO put into Strings.xml -->
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    android:textColor="@color/customGray"
                    roboto:light="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sleep duration"/>
                <!-- TODO put into Strings.xml -->
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    android:textColor="@color/white"
                    android:id="@+id/fragment_sleep_today_sleepduration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="--"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!-- TODO put into Strings.xml -->
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    android:textColor="@color/customGray"
                    android:layout_width="wrap_content"
                    roboto:light="true"
                    android:layout_height="wrap_content"
                    android:text="Sleep time"/>
                <!-- TODO put into Strings.xml -->
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    android:textColor="@color/white"
                    android:id="@+id/fragment_sleep_today_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="--"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!-- TODO put into Strings.xml -->
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    android:textColor="@color/customGray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    roboto:light="true"
                    android:text="Wake time"/>
                <!-- TODO put into Strings.xml -->
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    android:textColor="@color/white"
                    android:id="@+id/fragment_sleep_today_wake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="--"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!-- TODO put into Strings.xml -->
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    android:textColor="@color/customGray"
                    roboto:light="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deep sleep"/>
                <!-- TODO put into Strings.xml -->
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    roboto:bold="true"
                    android:textColor="@color/white"
                    android:id="@+id/fragment_sleep_today_deep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="--"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!-- TODO put into Strings.xml -->
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    android:textColor="@color/customGray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    roboto:light="true"
                    android:text="Light sleep"/>
                <!-- TODO put into Strings.xml -->
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    android:id="@+id/fragment_sleep_today_light"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="--"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!-- TODO put into Strings.xml -->
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    android:textColor="@color/customGray"
                    android:layout_width="wrap_content"
                    roboto:light="true"
                    android:layout_height="wrap_content"
                    android:text="Wake Duration"/>
                <!-- TODO put into Strings.xml -->
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    android:textColor="@color/white"
                    android:id="@+id/fragment_sleep_today_wakeduration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="--"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>