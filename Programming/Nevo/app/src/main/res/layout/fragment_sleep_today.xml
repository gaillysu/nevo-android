<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    xmlns:roboto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="6"
    android:background="@color/customBlack">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="4">

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/clock_imageView"
            android:src="@drawable/clockview600_sleep"/>

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/HomeClockHour"
            android:src="@drawable/clockview_hour_sleep" />

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/HomeClockMinute"
            android:src="@drawable/clockview_minute_sleep"/>

        <com.medcorp.view.SleepDataView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/sleepDataViewBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android_custom:roundColor="#00000000"
            android_custom:roundWidth="2dp"
            android_custom:roundProgressColor="#fff5a41c"
            android_custom:sleepWakeColor="@color/wake_sleep"
            android_custom:sleepLightColor="@color/light_sleep"
            android_custom:sleepDeepColor="@color/deep_sleep"
            android_custom:textIsDisplayable="false"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/fragment_sleep_today_dashboard_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:weightSum="2">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.medcorp.view.customfontview.RobotoTextView
                    android:textColor="@color/customGray"
                    roboto:light="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sleep_sleep_duration"/>
                <com.medcorp.view.customfontview.RobotoTextView
                    android:textColor="@color/white"
                    android:id="@+id/fragment_sleep_today_sleepduration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.medcorp.view.customfontview.RobotoTextView
                    android:textColor="@color/customGray"
                    android:layout_width="wrap_content"
                    roboto:light="true"
                    android:layout_height="wrap_content"
                    android:text="@string/sleep_sleep_time"/>
                <com.medcorp.view.customfontview.RobotoTextView
                    android:textColor="@color/white"
                    android:id="@+id/fragment_sleep_today_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.medcorp.view.customfontview.RobotoTextView
                    android:textColor="@color/customGray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    roboto:light="true"
                    android:text="@string/sleep_wake_time"/>
                <com.medcorp.view.customfontview.RobotoTextView
                    android:textColor="@color/white"
                    android:id="@+id/fragment_sleep_today_wake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.medcorp.view.customfontview.RobotoTextView
                    android:textColor="@color/customGray"
                    roboto:light="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sleep_deep_sleep"/>
                <com.medcorp.view.customfontview.RobotoTextView
                    android:textColor="@color/white"
                    android:id="@+id/fragment_sleep_today_deep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.medcorp.view.customfontview.RobotoTextView
                    android:textColor="@color/customGray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    roboto:light="true"
                    android:text="@string/sleep_light_sleep"/>
                <com.medcorp.view.customfontview.RobotoTextView
                    android:id="@+id/fragment_sleep_today_light"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.medcorp.view.customfontview.RobotoTextView
                    android:textColor="@color/customGray"
                    android:layout_width="wrap_content"
                    roboto:light="true"
                    android:layout_height="wrap_content"
                    android:text="@string/sleep_wake_duration"/>
                <com.medcorp.view.customfontview.RobotoTextView
                    android:textColor="@color/white"
                    android:id="@+id/fragment_sleep_today_wakeduration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/no_sleep_today_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:visibility="gone">

    <com.medcorp.view.customfontview.RobotoTextView
        android:id="@+id/fragment_sleep_today_nosleep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_marginTop="20dp"
        android:text="@string/sleep_today_no_sleep_message"/>
    <com.medcorp.view.customfontview.RobotoButton
        android:id="@+id/fragment_sleep_today_how_to"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/help_goto_sleep"
        android:textSize="18sp"
        roboto:light="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:background="@color/transparent"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        />
</LinearLayout>
</LinearLayout>