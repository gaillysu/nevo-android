<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    xmlns:roboto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:background="@color/customBlack">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="315dp"
        android:layout_height="315dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="4"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="20dp" >

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent = "true"
            android:id="@+id/clock_imageView"
            android:src="@drawable/clockview600_sleep"/>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent = "true"
            android:id="@+id/HomeClockHour"
            android:src="@drawable/clockview_hour_sleep"
            android:visibility="visible"/>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent = "true"
            android:id="@+id/HomeClockMinute"
            android:src="@drawable/clockview_minute_sleep"
            android:visibility="visible"/>

        <com.medcorp.nevo.view.SleepDataView
            android:id="@+id/sleepDataViewBar"
            android:layout_width="315dp"
            android:layout_height="315dp"
            android:layout_centerInParent = "true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android_custom:roundColor="#00000000"
            android_custom:roundWidth="5dp"
            android_custom:roundProgressColor="#fff5a41c"
            android_custom:sleepWakeColor="@color/wake_sleep"
            android_custom:sleepLightColor="@color/light_sleep"
            android_custom:sleepDeepColor="@color/deep_sleep"
            android_custom:textIsDisplayable="false"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:weightSum="2"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    android:textColor="@color/customGray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sleep duration"/>
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    roboto:bold="true"
                    android:textColor="@color/white"
                    android:id="@+id/fragment_sleep_today_sleepduration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="7h40m"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    android:textColor="@color/customGray"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deep sleep"/>
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    roboto:bold="true"
                    android:textColor="@color/white"
                    android:id="@+id/fragment_sleep_today_deep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="1h20m"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    android:textColor="@color/customGray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Light sleep"/>
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    android:id="@+id/fragment_sleep_today_light"
                    roboto:bold="true"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="6h20m"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    android:textColor="@color/customGray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sleep time"/>
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    roboto:bold="true"
                    android:textColor="@color/white"
                    android:id="@+id/fragment_sleep_today_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="22:30"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    android:textColor="@color/customGray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wake time"/>
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    roboto:bold="true"
                    android:textColor="@color/white"
                    android:id="@+id/fragment_sleep_today_wake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="07:10"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    android:textColor="@color/customGray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wake Duration"/>
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    roboto:bold="true"
                    android:textColor="@color/white"
                    android:id="@+id/fragment_sleep_today_wakeduration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="20m"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>