<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:textSize="22sp"
        android:textAllCaps="false"
        android:textColor="@color/customOrange"
        android:id="@+id/t2_tips_backButton"
        android:background="#00000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/t2_tips_title"
        android:text="@string/tutorial_tips_two_title"
        android:textColor="@color/customBlack"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="245dp"
            android:src="@drawable/tutorial_t2_tips_pic"
            android:paddingLeft="-10dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:id="@+id/t2_tips_message"
            android:text="@string/tutorial_tips_two_message"
            android:textColor="@color/customBlack"
            android:textSize="18sp"
            android:layout_toEndOf="@+id/longPushImage"
            android:layout_below="@+id/longPushImage"
            android:layout_alignParentEnd="false"
            android:layout_gravity="right|bottom"
            android:paddingLeft="11dp"/>
    </FrameLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/finish"
        android:id="@+id/t2_tips_finish_Button"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/customOrange"
        android:background="@color/transparent"
        android:textAllCaps="false"
        android:textSize="22sp"/>
</LinearLayout>