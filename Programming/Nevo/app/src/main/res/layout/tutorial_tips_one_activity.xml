<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:textSize="22sp"
        android:textAllCaps="false"
        android:textColor="@color/customOrange"
        android:id="@+id/t1_tips_backButton"
        android:background="#00000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/t1_tips_title"
        android:text="@string/tutorial_tips_one_tilte"
        android:textColor="@color/customBlack"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="245dp"
        android:src="@drawable/tutorial_t1_tips_pic"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:text="@string/tutorial_tips_one_message"
        android:id="@+id/t1_tips_message"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/customBlack"
        android:padding="10dp"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t1_tips_nextButton"
        android:text="@string/next"
        android:textSize="22sp"
        android:textAllCaps="false"
        android:textColor="@color/customOrange"
        android:background="#00000000"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>