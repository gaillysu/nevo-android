<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/customWhite">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="315dp"
            android:layout_height="315dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.18"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="false"
            android:layout_marginTop="60dp" >

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_centerInParent = "true"
                android:id="@+id/clock_imageView"
                android:src="@drawable/clockview600"/>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_centerInParent = "true"
                android:id="@+id/HomeClockHour"
                android:src="@drawable/clockview_hour"
                android:visibility="gone"/>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_centerInParent = "true"
                android:id="@+id/HomeClockMinute"
                android:src="@drawable/clockview_minute"
                android:visibility="gone"/>

            <com.medcorp.nevo.View.RoundProgressBar
                android:id="@+id/roundProgressBar"
                android:layout_width="315dp"
                android:layout_height="315dp"
                android:layout_centerInParent = "true"
                android_custom:roundColor="#00000000"
                android_custom:roundWidth="5dp"
                android_custom:roundProgressColor="#fff5a41c"
                android_custom:textIsDisplayable="false"/>

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_weight="0.18"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/setps_goal_button"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="0 / 0"
                android:id="@+id/textView"
                android:layout_marginTop="10dp"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

</LinearLayout>
