<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"

    >

    <include layout="@layout/toolbar"/>

    <RelativeLayout
        android:id="@+id/more_setting_go_setting_goal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="?android:attr/selectableItemBackground"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/def_goal_name"
            android:textColor="@color/text_color"
            android:textSize="20dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_right"
            android:tint="@color/colorPrimary"
            />

    </RelativeLayout>

    <!--select Unit-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:paddingRight="16dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="16dp"
            android:text="@string/more_setting_unit"
            android:textColor="@color/text_color"
            android:textSize="20dp"
            />

        <Spinner
            android:id="@+id/more_setting_select_unit_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:overlapAnchor="false"
            android:paddingLeft="16dp"
            />
    </LinearLayout>

    <!--select sync home time or local time-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:paddingRight="16dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="16dp"
            android:text="@string/more_setting_place_time"
            android:textColor="@color/text_color"
            android:textSize="20dp"
            />

        <Spinner
            android:id="@+id/more_setting_select_sync_time_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:overlapAnchor="false"
            android:paddingLeft="16dp"
            />
    </LinearLayout>
</LinearLayout>