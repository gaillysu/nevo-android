<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/lunar_adapter_solar"
        android:textColor="@color/text_color"
        android:textSize="28dp"
        />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/main_fragment_solar_pie_chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_weight="3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginRight="60dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/main_fragment_solar_page_time_on_battery_text"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/today_solar_battery_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="@color/profile_fragment_text_right_color"
                android:textSize="18sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/main_fragment_solar_page_time_on_solar_text"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/today_solar_solar_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:text="0"
                android:textColor="@color/profile_fragment_text_right_color"
                android:textSize="18sp"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>