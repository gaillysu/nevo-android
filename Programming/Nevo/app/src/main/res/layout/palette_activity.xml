<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/customWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/customWhite">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/typetext"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@color/black"
            android:gravity="center"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/backimage"
            android:layout_alignBottom="@+id/typetext"
            android:layout_alignParentStart="true"
            android:background="@drawable/back" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/paletteImage"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/palette"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/grassGreenImage"
            android:background="@drawable/palette_grassgreenimage"
            android:layout_marginTop="12dp"
            android:layout_alignTop="@+id/paletteImage"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orangeImage"
            android:background="@drawable/palette_orangeimage"
            android:layout_below="@+id/grassGreenImage"
            android:layout_alignStart="@+id/paletteImage"
            android:layout_marginStart="23dp"
            android:layout_marginTop="11dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yellowImage"
            android:background="@drawable/palette_yellowimage"
            android:layout_marginBottom="50dp"
            android:layout_alignBottom="@+id/paletteImage"
            android:layout_alignStart="@+id/orangeImage" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/greenImage"
            android:background="@drawable/palette_greenimageview"
            android:layout_alignBottom="@+id/paletteImage"
            android:layout_alignStart="@+id/grassGreenImage"
            android:layout_marginBottom="12dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blueImage"
            android:background="@drawable/palette_blueimageview"
            android:layout_marginEnd="23dp"
            android:layout_alignTop="@+id/yellowImage"
            android:layout_alignEnd="@+id/paletteImage" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/redImage"
            android:background="@drawable/palette_redimage"
            android:layout_alignTop="@+id/orangeImage"
            android:layout_alignStart="@+id/blueImage" />

    </RelativeLayout>

</LinearLayout>