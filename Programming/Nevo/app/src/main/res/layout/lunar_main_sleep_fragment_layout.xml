<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/main_sleep_fragment_title"
        android:textColor="@color/text_color"
        android:textSize="28dp"
        />
    <com.medcorp.view.graphs.SleepTodayChart
        android:id="@+id/fragment_sleep_history_linechart"
        android:layout_width="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/window_background_color">
    </com.medcorp.view.graphs.SleepTodayChart>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/lunar_main_sleep_fragment_time_text"
                    android:layout_weight="2"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/lunar_sleep_fragment_sleep_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_weight="1"
                    android:text="0"
                    android:textColor="@color/profile_fragment_text_right_color"
                    android:textSize="18sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/lunar_main_sleep_fragment_wake_time_text"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/lunar_hjbkarl"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="0"
                    android:textColor="@color/profile_fragment_text_right_color"
                    android:textSize="18sp"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/lunar_main_sleep_fragment_sleep_dec"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"
                    android:layout_weight="2"
                    />

                <TextView
                    android:id="@+id/lunar_sleep_fragment_quality"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="0"
                    android:textColor="@color/profile_fragment_text_right_color"
                    android:textSize="18sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:text="@string/lunar_main_sleep_fragment_duration"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/lunar_sleep_fragment_duration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="start"
                    android:text="0"
                    android:textColor="@color/profile_fragment_text_right_color"
                    android:textSize="18sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>