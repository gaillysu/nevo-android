<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roboto="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="6"
    >
    <com.github.mikephil.charting.charts.BarChart
        android:layout_weight="4"
        android:background="@color/customBlack"
        android:id="@+id/fragment_sleep_history_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </com.github.mikephil.charting.charts.BarChart>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:weightSum="2"
        android:layout_weight="2">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    android:textColor="@color/customGray"
                    roboto:light="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sleep_sleep_duration"/>
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    android:textColor="@color/black"
                    android:id="@+id/fragment_sleep_history_sleep_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="@string/sleep_empty"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    android:textColor="@color/customGray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    roboto:light="true"
                    android:text="@string/sleep_sleep_time"/>
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    android:textColor="@color/black"
                    android:id="@+id/fragment_sleep_history_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="@string/sleep_empty"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    android:textColor="@color/customGray"
                    android:layout_width="wrap_content"
                    roboto:light="true"
                    android:layout_height="wrap_content"
                    android:text="@string/sleep_wake_time"/>
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    android:textColor="@color/black"
                    android:id="@+id/fragment_sleep_history_wake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="@string/sleep_empty"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    android:textColor="@color/customGray"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    roboto:light="true"
                    android:text="@string/sleep_deep_sleep"/>
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    android:textColor="@color/black"
                    android:id="@+id/fragment_sleep_history_deep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="@string/sleep_empty"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    android:textColor="@color/customGray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    roboto:light="true"
                    android:text="@string/sleep_light_sleep"/>
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    android:id="@+id/fragment_sleep_history_light"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="@string/sleep_empty"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    android:textColor="@color/customGray"
                    roboto:light="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sleep_wake_duration"/>
                <com.medcorp.nevo.view.customfontview.RobotoTextView
                    android:textColor="@color/black"
                    android:id="@+id/fragment_sleep_history_wake_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="@string/sleep_empty"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>