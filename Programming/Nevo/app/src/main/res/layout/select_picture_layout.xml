<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/window_background_color"
              android:gravity="center_horizontal"
              android:paddingTop="10dp"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/popup_window_background"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:gravity="center"
                android:text="@string/profile_activity_popupwindow_title"
                android:textColor="@color/tab_selected_background_color"
                android:textSize="16sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/tab_selected_background_color"
                />


            <TextView
                android:id="@+id/user_select_library"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="@string/profile_activity_popupwindow_slect_library"
                android:textColor="@color/tab_selected_background_color"
                android:textSize="20sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/tab_selected_background_color"
                />


            <TextView
                android:id="@+id/user_select_camera"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="@string/profile_activity_popupwindow_form_photo"
                android:textColor="@color/tab_selected_background_color"
                android:textSize="20sp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/user_select_cancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/popup_window_background"
            android:gravity="center"
            android:text="@string/ble_connection_timeout_cancel"
            android:textColor="@color/text_color"
            android:textSize="20sp"
            />
    </LinearLayout>
</LinearLayout>