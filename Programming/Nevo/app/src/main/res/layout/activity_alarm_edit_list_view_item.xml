<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roboto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <com.medcorp.view.customfontview.RobotoTextView
        android:id="@+id/activity_alarm_edit_list_view_item_delete_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:text="@string/alarm_delete"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <com.medcorp.view.customfontview.RobotoTextView
        android:id="@+id/activity_alarm_edit_list_view_item_title_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/text_color"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <com.medcorp.view.customfontview.RobotoTextView
        android:id="@+id/activity_alarm_edit_list_view_item_summary_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/customGray"
        roboto:light="true"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>


</RelativeLayout>