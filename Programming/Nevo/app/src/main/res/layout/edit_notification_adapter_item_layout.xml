<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/open_notification_red_lamp"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="10dp"
        >

        <ImageView
            android:id="@+id/notification_red"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/red_dot"
            />

        <TextView
            android:id="@+id/notification_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/notification_red"
            android:text="2 o'clock"
            android:textColor="@color/text_color"
            android:textSize="16dp"
            />

        <ImageView
            android:id="@+id/open_notification_red_lamp_flag"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_done"
            />

        <View
            android:id="@+id/notification_divider_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="15dp"
            android:background="@color/notification_divider_color"
            android:visibility="gone"
            />
    </RelativeLayout>
</LinearLayout>