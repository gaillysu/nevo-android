<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:roboto="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

    <RelativeLayout
        android:id="@+id/fragment_alarm_list_view_item_alarm_time_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.medcorp.view.customfontview.RobotoTextView
            android:id="@+id/fragment_alarmm_list_view_item_alarm_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="65sp"
            roboto:thin="true"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/fragment_alarmm_list_view_item_alarm_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:focusable="false"
            android:shadowColor="@color/colorPrimary"/>
    </RelativeLayout>

    <com.medcorp.view.customfontview.RobotoTextView
        android:id="@+id/fragment_alarmm_list_view_item_alarm_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_alarm_list_view_item_alarm_time_wrapper"
        android:paddingBottom="25dp"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:paddingTop="15dp"
        android:textSize="18sp"
        roboto:bold="true"/>


</RelativeLayout>