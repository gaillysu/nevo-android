<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roboto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    >

    <com.medcorp.nevo.view.customfontview.RobotoTextView
        android:id="@+id/activity_mynevo_list_view_item_title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        roboto:bold="true"
        android:paddingTop="8dp"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_mynevo_list_view_item_title_label"
        android:orientation="horizontal"
        >
    <com.medcorp.nevo.view.customfontview.RobotoTextView
        android:id="@+id/activity_mynevo_list_view_item_version_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        roboto:bold="false"
        android:layout_centerVertical="true"
        android:textColor="@color/customGray"
        android:textSize="16sp"/>

    <com.medcorp.nevo.view.customfontview.RobotoTextView
        android:id="@+id/activity_mynevo_list_view_item_infomation_label"
        android:layout_toRightOf="@+id/activity_mynevo_list_view_item_version_label"
        android:paddingLeft="10dp"
        android:layout_centerVertical="true"
        android:textColor="@color/customOrange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"/>

        <ImageView
            android:id="@+id/activity_mynevo_list_view_item_update_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/firmware_update"/>

    </RelativeLayout>
</RelativeLayout>