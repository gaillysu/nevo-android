<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TabLayout
        android:id="@+id/fragment_sleep_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/NevoTabLayout"
        app:tabIndicatorColor="@color/tab_selected_background_color"/>
    <!-- If you change this tab indicator color, also change it in fragment_steps.xml.
     I couldn't divine it into NevoTabLayout for some reason.-->

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_sleep_view_pager"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:background="@color/white"/>

</LinearLayout>