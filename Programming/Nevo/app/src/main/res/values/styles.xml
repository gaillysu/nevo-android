<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="NevoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimaryInverse</item>
        <item name="android:actionBarStyle">@style/NevoActionBar</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:alertDialogStyle">@style/NevoDialogStyle</item>
        <item name="preferenceTheme">@style/NevoSettingsLayout</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowBackground">@color/window_background_color</item>
    </style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/check_box_style</item>
    </style>

    <style name="NevoActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:colorPrimary">@color/white</item>
    </style>

    <style name="NevoDialogStyle" parent="Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="NevoTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabMode">fixed</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="tabTextAppearance">@style/NevoTabLayoutTextAppearance</item>
        <item name="tabIndicatorHeight">4dp</item>
    </style>

    <style name="NevoTabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/tab_unselected_font_color</item>
    </style>

    <style name="NevoSettingsLayout" parent="PreferenceThemeOverlay">
        <item name="android:background">@color/white</item>
        <item name="preferenceFragmentListStyle">@style/NevoSettingsListItem</item>
        <item name="android:preferenceStyle">@style/Preference</item>
        <item name="android:preferenceLayoutChild">@style/NevoSettingsListItem</item>
    </style>

    <style name="NevoSettingsStyle" parent="PreferenceFragmentList">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="NevoSettingsListItem" parent="Preference">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:dividerHeight">2dp</item>
    </style>

    <style name="TutorialButton">
        <item name="android:height">40dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/outline_fill_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
    </style>

    <style name="TakeTourButton">
        <item name="android:height">40dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/outline_help_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black</item>

        <item name="android:windowBackground">@color/baseBackground</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorControlNormal">@color/customGray</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="android:textColorHint">@color/customGray</item>

        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:colorButtonNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorPrimary">@color/customGray</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
</resources>