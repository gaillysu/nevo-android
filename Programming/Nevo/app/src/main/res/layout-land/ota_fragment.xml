<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/customWhite">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp">

        <com.medcorp.nevo.view.customfontview.RalewayTextView
            android:id="@+id/mcuVersionLabel"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="MCU Version"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <com.medcorp.nevo.view.customfontview.RalewayTextView
            android:id="@+id/bleVersionLabel"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Ble Version"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:id="@+id/warningButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/warning"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_alignParentStart="false" />
    </RelativeLayout>

    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="315dp"
            android:layout_height="315dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.18"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="false"
            android:layout_marginTop="0dp" >

            <com.medcorp.nevo.view.RoundProgressBar
                android:id="@+id/roundProgressBar"
                android:layout_width="315dp"
                android:layout_height="315dp"
                android:layout_centerInParent = "true"
                android_custom:roundColor="@color/customGray"
                android_custom:roundWidth="5dp"
                android_custom:roundProgressColor="@color/customOrange"
                android_custom:textIsDisplayable="false"/>

        <TextView
            android:id="@+id/progressValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100%"
            android:textSize="80sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</LinearLayout>
