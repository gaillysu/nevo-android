<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NevoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorPrimaryInverse">@color/textColorPrimaryInverse</item>
        <item name="android:actionBarStyle">@style/NevoActionBar</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:alertDialogStyle">@style/NevoDialogStyle</item>
        <item name="preferenceTheme">@style/NevoSettingsLayout</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

</resources>